<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BarTextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text.size.regular</item>
    </style>

    <style name="ScreenshotImage">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">400dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginLeft">21dp</item>
        <item name="android:layout_marginRight">21dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ReportButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/report.button.padding</item>
        <item name="android:layout_marginRight">@dimen/report.button.margin.horizontal</item>
        <item name="android:background">@drawable/button_option</item>
        <item name="android:textColor">@drawable/button_option_text_color</item>
        <item name="android:textSize">@dimen/text.size.small</item>
    </style>

    <style name="ReportContentEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">top</item>
        <item name="android:textColorHint">@color/kind.button.disabled</item>
    </style>

    <style name="DialogText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/big_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dialog.text.color</item>
        <item name="android:textSize">@dimen/confirmation_dialog_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:minWidth">@dimen/confirmation_dialog_width</item>
    </style>
</resources>