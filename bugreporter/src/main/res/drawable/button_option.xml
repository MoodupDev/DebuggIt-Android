<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/kind.button.disabled" />
            <corners android:radius="@dimen/kind.button.radius" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="@color/button.not.selected"/>
            <corners android:radius="@dimen/kind.button.radius" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/kind.button" />
            <corners android:radius="@dimen/kind.button.radius" />
        </shape>
    </item>
</selector>