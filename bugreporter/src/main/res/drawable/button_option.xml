<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/br.kind.button.disabled" />
            <corners android:radius="@dimen/br.kind.button.radius" />
        </shape>
    </item>

    <item android:state_selected="false" android:color="@color/br.button.not.selected">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="@color/br.button.not.selected"/>
            <corners android:radius="@dimen/br.kind.button.radius" />
        </shape>
    </item>

    <item android:state_selected="true" android:color="@android:color/white">
        <shape android:shape="rectangle">
            <solid android:color="@color/br.app.orange" />
            <corners android:radius="@dimen/br.kind.button.radius" />
        </shape>
    </item>
</selector>