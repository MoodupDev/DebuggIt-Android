<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/report.item.width"
    android:layout_height="@dimen/report.item.height"
    android:layout_margin="@dimen/small_margin"
    android:background="@drawable/item_background"
    android:gravity="center">

    <ImageView
        android:id="@+id/item_screenshot_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/attach_delete" />

    <ImageView
        android:id="@+id/item_screenshot_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/tiny_padding" />

</RelativeLayout>