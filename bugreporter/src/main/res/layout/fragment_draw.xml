<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/big_margin"
    android:background="@drawable/main_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.moodup.bugreporter.MontserratTextView
            android:id="@+id/draw_cancel"
            style="@style/BarTextButton"
            android:layout_alignParentLeft="true"
            android:text="@string/button.cancel" />

        <com.moodup.bugreporter.MontserratTextView
            android:id="@+id/draw_confirm"
            style="@style/BarTextButton"
            android:layout_alignParentRight="true"
            android:text="@string/button.save" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar"
        android:layout_below="@+id/top_bar"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/image_surface"
            style="@style/ScreenshotImage"
            android:background="@drawable/screenshot_background"
            android:scaleType="fitStart" />

        <com.moodup.bugreporter.PaintableImageView
            android:id="@+id/draw_surface"
            style="@style/ScreenshotImage"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="@dimen/small_margin">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/rectangle" />

        <View
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/draw" />

        <View
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/rubber" />
    </LinearLayout>

</RelativeLayout>