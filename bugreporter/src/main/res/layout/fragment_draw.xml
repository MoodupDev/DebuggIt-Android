<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/confirmation_dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/big_margin"
    android:background="@drawable/main_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.moodup.bugreporter.MontserratTextView
            android:id="@+id/draw_cancel"
            style="@style/BarTextButton"
            android:layout_alignParentLeft="true"
            android:text="@string/button.cancel" />

        <com.moodup.bugreporter.MontserratTextView
            android:id="@+id/draw_confirm"
            style="@style/BarTextButton"
            android:layout_alignParentRight="true"
            android:text="@string/button.send" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/draw_cancel"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@color/app.gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/surface_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_bar"
        android:layout_below="@id/top_bar"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_surface"
            style="@style/ScreenshotImage"
            android:background="@drawable/screenshot_background"
            android:scaleType="fitXY" />

        <com.moodup.bugreporter.PaintableImageView
            android:id="@+id/draw_surface"
            style="@style/ScreenshotImage"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/bottom_bar"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@color/app.gray" />

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="@dimen/small_margin">

        <ImageView
            android:id="@+id/draw_rectangles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/button_rectangle" />

        <View
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/draw_free"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/button_free_draw" />

        <View
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/draw_rubber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/button_rubber" />
    </LinearLayout>

</RelativeLayout>