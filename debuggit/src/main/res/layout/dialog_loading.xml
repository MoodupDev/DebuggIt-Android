<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_margin="@dimen/br.big.margin"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/br.big.padding"
        android:background="@drawable/main_background">


        <com.mooduplabs.debuggit.MontserratTextView
            android:id="@+id/confirmation_dialog_message"
            style="@style/BrDialogText"
            android:text="@string/br.loading.dialog.message.report"/>

        <ProgressBar
            android:id="@+id/loading_spinner"
            style="@style/Base.Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/br.big.margin"
            android:layout_marginTop="@dimen/br.small.margin"
            android:indeterminate="true"
            android:indeterminateTint="@color/br.app.orange"
            android:indeterminateTintMode="src_atop"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/br.small.margin"
            android:background="@color/br.app.gray"/>

        <com.mooduplabs.debuggit.MontserratTextView
            android:id="@+id/loading_dialog_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/br.regular.padding"
            android:text="@string/br.button.cancel"
            android:textColor="@drawable/dialog_text_color"
            android:textSize="@dimen/br.text.size.regular"
            android:textStyle="bold"/>

    </LinearLayout>

    <include layout="@layout/created_by_view"/>

</LinearLayout>